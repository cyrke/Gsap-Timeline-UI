.gsapui__timeline__duration

.gsapui__track__container
  .gsapui__track
  .gsapui__track__cursor.gsapui__track__marker

nav.gsapui__controls

  div.gsapui__controls__container
    ul.gsapui__btnlist.gsapui__playpause
      li.gsapui__btnlist__item
        button(class="gsapui__btn material-icons" data-action="backward") fast_rewind
      li.gsapui__btnlist__item
        button(class="gsapui__btn material-icons" data-action="toggleplay") pause
      li.gsapui__btnlist__item
        button(class="gsapui__btn material-icons" data-action="forward") fast_forward

    ul.gsapui__btnlist.gsapui__timescale
      li.gsapui__btnlist__item.gsapui__numberdial
        button(class="gsapui__btn gsapui__btn--narrow arrow_drop_down--small material-icons" data-action="slower") remove
        input(
          class="gsapui__numberdial__input"
          type="number"
          value="1" step="0.125"
          onkeyup="this.value=this.value.replace(/[^0-9.,]+/,'')"
          data-action="timeScale"
        )
        button(class="gsapui__btn gsapui__btn--narrow material-icons" data-action="faster") add

  div.gsapui__controls--right
    ul.gsapui__btnlist
      li.gsapui__btnlist__item.gsapui__toggle
        input(
          type="checkbox"
          id="isSavingPosition"
          class="gsapui--hidden"
          data-option="isSavingPosition"
          checked=(settings.isSavingPosition ? "checked" : undefined)
        )
        label(class="gsapui__btn material-icons" for="isSavingPosition") restore
